<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inf.ufg.br.mydoctor">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.AuthenticationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HomeActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ui.RegisterActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ui.profile.UpdateProfileActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity android:name=".ui.speciality.SpecialityActivity" />

        <activity android:name=".ui.locals.LocalsActivity"/>

        <activity android:name=".ui.doctors.DoctorsActivity"/>

    </application>

</manifest>